{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9zci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA0L2pvYjY4NS0yMjAucG5n.png",
    "category": "custom"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Multi-Step Form Activity",
      "description": "A custom activity with multiple steps."
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "key": "message",
          "type": "text",
          "label": "Message",
          "description": "The message to be sent with the activity.",
          "defaultValue": "Default message"
        }
      ],
      "outArguments": [],
      "verb": "POST",
      "body": "{}",
      "header": "",
      "format": "json",
      "useJwt": false,
      "timeout": 10000
    }
  },
  "configurationArguments": {
    "publish": {
      "verb": "POST",
      "useJwt": false
    },
    "validate": {
      "verb": "POST",
      "useJwt": false
    },
    "stop": {
      "verb": "POST",
      "useJwt": false
    }
  },
  "wizardSteps": [
    { "label": "Step 1", "key": "step1" },
    { "label": "Step 2", "key": "step2" },
    { "label": "Step 3", "key": "step3" },
    { "label": "Step 4", "key": "step4" }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 600,
      "width": 800,
      "fullscreen": true
    },
    "runningModal": {
      "url": "runningModal.html"
    },
    "runningHover": {
      "url": "runningHover.html"
    }
  }
}
